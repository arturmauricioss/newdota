{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    // permite top-level await e ESModules
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // JSX e JavaScript no RN
    "jsx": "react-native",
    "allowJs": true,

    // interoperabilidade e resolução de JSON
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    // verificação estrita
    "strict": true,

    // aliases para @/… 
    "baseUrl": ".",
    "paths": {
      "@/*": ["assets/*"]
    }
  },

  // grita tudo que é TS/TSX nos seus diretórios principais
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "app/**/*.ts",
    "app/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],

  // ignora módulos externos
  "exclude": ["node_modules"]
}
