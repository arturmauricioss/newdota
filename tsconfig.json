{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "NodeNext", // ← ajustado
    "target": "ES2020",
    "moduleResolution": "NodeNext", // ← compatível
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true, 
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
